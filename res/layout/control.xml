<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:clickable="false"
    android:gravity="left"
    android:orientation="horizontal"
    android:scrollbars="horizontal" >
              
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text=""
         />
              
    <TextView
        android:id="@+id/timeCodeView"
        android:background = "#FFFFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Loading ..."
        android:textColor="#ff00ddff"
        android:textSize="20sp" />
    
    <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeCodeView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp" />

      <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_below="@+id/seekBar"
                      android:layout_marginTop="8dp"
                      android:layout_alignParentEnd="true"
                      android:gravity="center_horizontal"
                      android:id = "@+id/controls">
                      
            <ImageView
            android:id="@+id/pauseButton"
            android:layout_width="30dp"
            android:layout_height="30dp"  
            android:src="@drawable/pause" />
            
            <ImageView
            android:id="@+id/playButton"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"  
            android:src="@drawable/play" />   

        </LinearLayout>
        
      <TextView
        android:id="@+id/skip_msg"
        android:layout_below="@+id/controls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Skip Ad in 5"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor = "#44000000"
        android:background="#22000000" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/skip_msg"
            android:src="@drawable/champagne" />

</RelativeLayout>